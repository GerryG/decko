.media{media_opts}
  .media-left{class: classy("media-left")}
    .image-box{class: [classy("image-box"), size]}
      %a{href: "#"}
        %img.media-object{class: size, src: src.html_safe, alt: alt}
    = media_left_extras
  .media-body
    - if title != ""
      %h5.media-heading
        = title
    = text
