.media{media_opts}
  .media-left
    .image-box{ class: "mr-1 #{size}" }
      %img.media-object{class: size, src: src.html_safe, alt: alt}
    = media_left_extras
  .media-body{ class: "media-body-#{size}" }
    - if title != ""
      %h5{ class: classy("media-heading") }
        = title
    .media-text
      = text
