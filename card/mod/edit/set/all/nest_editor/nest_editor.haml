%div
  %h5 Nest
  .form
    .form-row.align-items-center.mb-4
      .col-9
        .input-group
          .input-group-prepend._field-indicator
            .input-group-text.text-muted{class: [!edit_nest.field? && "d-none"]}
              +
          = text_field_tag "nest_name", edit_nest.name, class: "form-control _nest-name border-left-0"

      .col-3
        = check_box_tag :field, "field", edit_nest.field?,
                        class: "_nest-field-toggle", id: "nest-editor-field"
        %label.form-check-label{for: "nest-editor-field"} field

    = static_tabs({ rules: haml_partial(:rules), options: haml_partial(:options) }, :options, "tabs")

  .card-footer.p-0
    .preview.m-1
      = text_field_tag "preview", edit_nest.raw, class: "_nest-preview w-100 text-muted", disabled: true
    %hr.mt-1.mb-1
    .form-group.d-flex.justify-content-center.mt-2
      = button_tag "Apply", class: "_nest-apply btn-sm", "data-nest-id": nest_id,
                                                         "data-tinymce-id": tinymce_id
      %a.border-light.text-dark.btn.btn-sm.btn-outline-secondary{"data-dismiss": "overlay", href: "#"}
        Close
