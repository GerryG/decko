.filter-header.card-header
  %h5
    Select Item
    .badge.badge-secondary
      = card.count
.filter-selector.p-3
  - if card.count > 0
    %input#select-all._select-all{name: "", type: "checkbox", value: ""}
    %label{for: "select-all"}
      select
      %span._unselected-items
        = search_with_params.size
      following
  = render :checkbox_list
