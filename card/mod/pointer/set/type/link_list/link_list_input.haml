%ul{class: ul_classes}
  - items.each do |item|
    %li.pointer-li.mb-1
      %span.input-group
        .input-group-prepend.handle
          %span.input-group-text
            = icon_tag :reorder
        [[
        = text_field_tag "pointer_item", item, class: "_reference pointer-item-text form-control",
                                               "data-options-card": options_card
        |
        = text_field_tag "pointer_item_title", item, class: "_title pointer-item-text form-control"
        ]]
        .input-group-append
          %button.pointer-item-delete.btn.btn-secondary{ type: "button"}
            = icon_tag :remove
%span.input-group
  %button.pointer-item-add.btn.btn-secondary{ type: "submit" }
    = icon_tag "add"
    add another
