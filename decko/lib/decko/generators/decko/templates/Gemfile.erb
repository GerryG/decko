source "http://rubygems.org"

gem "decko"<%= repo_path_constraint %>

# DATABASE
gem <%= database_gem_and_version %>

# WEBSERVER
# To run a simple deck at localhost:3000, you can use thin (recommended), unicorn,
# or (Rails" default) Webrick
gem "thin"
# gem "unicorn"


# MODS
gem "card-mod-defaults"

# BACKGROUNDING
# The daemons gem is needed to run tasks like sending notifications in a background process.
# See config/application.rb for configuration details.
# gem "daemons"

<%= "# " if shark? %>gem "card-mod-monkey_test", group: :test
<%= "# " if shark? %>gem "card-mod-monkey_development", group: :development
<%= "# " if shark? %>gem "cypress-on-rails", "~> 1.4", group: %i[cypress test]
<%= "# " if shark? %>gem "ruby-prof", group: :profile  # profiling

<%- if spring_install? && !shark? %>
# Spring speeds up development by keeping your application running in the background.
# Read more: https://github.com/rails/spring
gem "listen", "3.0.6"
gem "spring"
gem "spring-commands-rspec"
gem "spring-commands-cucumber"
<% end -%>

<%= "# " unless platypus? %>gem "card-mod-platypus", group: :test
<%= "# " unless platypus? %>gem "capybara-select2", group: :test, git: "https://github.com/brunocavalcante/capybara-select2"


# The following allows simple (non-gem) mods to include gems via a Gemfile.
# You may need to alter this code if you move such mods to an unconventional location.
Dir.glob("mod/**/Gemfile").each { |gemfile| instance_eval File.read(gemfile) }
